% box dimension definition %
beginadjchar("P",4.5,cap#,0);

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space+0.5u#,space+0.1u#);
fi

% construction %
x1=x2=x3=x8=leftstemloc;
x1r=x2r=x1+(cont*px/2);
x5=x6=w-x1;
x5r=x6r=x6-(cont*px/2);
x4r=x7r=x1r+incx*w+px;;
y1=0;
y2=h;
top y3=h;
y3=y4;
y3r=y4r=h-px;
y7=y8=bar*h;
y7r=y8r=y7+.5px;
y5r=y7r+.5*(y4r-y7r)+incy*.5*(y4r-y7r);
y6r=y7r+.5*(y4r-y7r)-incy*.5*(y4r-y7r);
ang:=angle(z6r-z7r);

% penpositions %
penpos1(whatever,0);
penpos2(whatever,0);
penpos3(whatever,90);
penpos4(whatever,90);
penpos5(whatever,180);
penpos6(whatever,180);
penpos7(whatever,-90);
penpos8(whatever,-90);

% draw %
penstroke z1e---z2e;
penstroke z3e---super_qr(4e,5e)---super_ql(6e,7e)--z8e;

% penlabels(range 1 thru 30);

endchar;