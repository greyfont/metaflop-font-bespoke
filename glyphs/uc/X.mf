% box dimension definition %
beginadjchar("X",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space-0.4u#,space-0.4u#);

% construction %
x1l=x3l=leftstemloc-cont*px/2;
x2r=w-x1l;
x4r=x2+.5(x2r-x2);
y1=y4=h;
y2=y3=0;

% diagonal angle
alphaX=diag_ratio(1,cont*px,h,x2r-x1l);

% penpositions %
penpos1(alphaX*cont*px,0);
penpos2(alphaX*cont*px,0);
penpos3(alphaX*px,0);
penpos4(alphaX*px,0);

% draw %
penstroke z1e---z2e;
penstroke z3e---z4e;

penlabels(range 1 thru 150);

endchar;