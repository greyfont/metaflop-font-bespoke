% box dimension definition %
beginadjchar(44,1,mean#,des#);

% sidebearings %
numeric l,r;
normal_adjust_fit(space+0.6u#,space+0.5u#);

% construction %
x3=leftstemloc;
x4=w-leftstemloc-px;
y3=1.2*cont*px+o;
y4=-0.4des;

% diagonal angle
alphacomma=diag_ratio(1,cont*px,h,x4-x3);

% penpositions %
penpos3(1.3alphacomma*cont*px,0);
penpos4(0.9alphacomma*cont*px,0);

% draw %
fill z3l--z4l--z4r--z3r--cycle;

penlabels(range 1 thru 150);

endchar;