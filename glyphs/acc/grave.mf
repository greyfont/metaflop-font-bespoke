% box dimension definition %
beginadjchar(0,2.25,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*-0.1u#,space*-0.1u#);

% construction %
x3=leftstemloc;
x4=w-leftstemloc-px;
y4=0.85h;
y3=h;

% diagonal angle
alphagrave=diag_ratio(1,cont*px,h,x4-x3);

% penpositions %
penpos3(1.3alphagrave*cont*px,0);
penpos4(0.9alphagrave*cont*px,0);

% draw %
fill z3l--z4l--z4r--z3r--cycle;

% composite anchor %
charanchortops_[charcode]=(.5w,h);

penlabels(range 1 thru 150);

endchar;